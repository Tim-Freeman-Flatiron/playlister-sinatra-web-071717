<form action='/songs' method='post'>
	
	<label>Name:</label>
	<input type="text" name="song[name]" id="Name">

	<label>Genre(s): </label>
		<% @genres.each do |genre| %>
			<input type="checkbox" name="song[genre_ids][]" value="<%=genre.id%>" id="<%=genre.name%>"><%=genre.name%></input>
		<% end %>

	<label>Artist: </label>
		<input type="text" name="artist[name]" id="Artist Name">

	<input type="submit" name="submit" id="Artist Name" value="Create">
</form>